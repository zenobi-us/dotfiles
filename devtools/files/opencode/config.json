{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [ "opencode-sessions"],
  "mcp": {
    "atlassian": {
      "type": "local",
      "command": [
        "mise",
        "x",
        "node@22",
        "--",
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ]
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "mise", "x", "node@22", "--",
        "chrome-devtools-mcp", 
        "--browser-url=http://127.0.0.1:9222"
      ],
      "enabled": true
    }
  }
}
