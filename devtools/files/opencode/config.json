{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-sessions",
    "@zenobius/opencode-background",
    "@tarquinen/opencode-dcp@0.2.7"
  ],
  "model": "anthropic/claude-haiku-4-5",
  "autoupdate": false,
  "provider": {
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "openai/gpt-oss-20b": {
          "name": "openai/gpt-oss-20b (local)"
        }
      }
    }
  },
  
  "formatter": {
    "markdownlint": {
      "command": ["mise" , "x", "--", "markdownlint", "--fix", "$FILE"],
      "extensions": [".md"]
    }
  },
 
  "mcp": {
    "memoria": {
      "type": "local",
      "command": [
        "mise",
        "x",
        "node@22", "--", "npx", "in-memoria", "server"]
    },
    "atlassian": {
      "type": "local",
      "command": [
        "mise",
        "x",
        "node@22",
        "--",
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ],
      "enabled": true
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "mise",
        "x",
        "node@22",
        "--",
        "chrome-devtools-mcp",
        "--browser-url=http://127.0.0.1:9222"
      ],
    }
  }
}
