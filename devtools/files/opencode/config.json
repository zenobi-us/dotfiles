{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-sessions@latest",
    "@zenobius/opencode-background@latest",
    "@tarquinen/opencode-dcp@latest"
  ],
  "model": "anthropic/claude-haiku-4-5",
  "autoupdate": false,
  "experimental": {
    "primary_tools": ["prune"]
  },
  "provider": {
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "qwen/qwen3-8b": {
          "name": "Qwen 3 8B",
          "contextLength": 32768
        }
      }
    }
  },
  
  "formatter": {
    "markdownlint": {
      "command": ["mise" , "x", "--", "markdownlint", "--fix", "$FILE"],
      "extensions": [".md"]
    }
  },
  "tools" : {
    "memoria_*": false,
    "atlassian": false,
    "gh_grep": false,
    "chrome-devtools": false
  },
  "mcp": {
    "memoria": {
      "type": "local",
      "command": [
        "mise",
        "x",
        "node@22", "--", "npx", "in-memoria", "server"]
    },
    
    "atlassian": {
      "type": "local",
      "command": [
        "mise",
        "x",
        "node@22",
        "--",
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ],
    },


    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
    },


    "chrome-devtools": {
      "type": "local",
      "command": [
        "mise",
        "x",
        "node@22",
        "--",
        "chrome-devtools-mcp",
        "--browser-url=http://127.0.0.1:9222"
      ],
    }
  }
}
