{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-sessions@latest",
    "@zenobius/opencode-background@latest",
    "@zenobius/opencode-skillful@1.0.0",
    "@tarquinen/opencode-dcp@latest",
    "@franlol/opencode-md-table-formatter@0.0.3",
  ],
  "model": "anthropic/claude-haiku-4-5",
  "autoupdate": false,
  "experimental": {
    "primary_tools": [
      "prune"
    ]
  },
  "provider": {
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "qwen/qwen3-8b": {
          "name": "Qwen 3 8B",
        }
      }
    }
  },
  "formatter": {
    "markdownlint": {
      "command": [
        "mise",
        "x",
        "--",
        "markdownlint",
        "--fix",
        "$FILE"
      ],
      "extensions": [
        ".md"
      ]
    }
  },
  "tools": {
    "memoria_*": false,
    "gh_grep*": false,
  },
  "mcp": {
    "memoria": {
      "type": "local",
      "command": [
        "mise",
        "x",
        "node@22",
        "--",
        "npx",
        "in-memoria",
        "server"
      ]
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
    },
  }
}
