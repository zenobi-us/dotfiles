{
  "mcpServers": {
    "basicmemory": {
      "type": "local",
      "command": [
        "basic-memory",
        "mcp"
      ]
    },
    "atlassian": {
      "type": "local",
      "command": [
        "mise",
        "x",
        "node@22",
        "--",
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ]
    },
    "figma": {
      "type": "remote",
      "auth": "oauth",
      "baseUrl": "https://mcp.figma.com/mcp"
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "mise",
        "x",
        "node@22",
        "--",
        "chrome-devtools-mcp",
        "--browser-url=http://127.0.0.1:9222"
      ]
    },
    "firefox-devtools": {
      "type": "local",
      "command": [
        "mise",
        "x",
        "node@22",
        "--",
        "npx",
        "-y",
        "firefox-devtools-mcp@latest"
      ],
      "env": {
        "npm_config_loglevel": "error"
      }
    }
  }
}
